---
import Welcome from "@components/home/Welcome.astro";
import PostsShowcase from "@components/home/PostsShowcase.astro"

const {featuredPosts} = Astro.props;
---

<div class="solitude-index-main grid grid-cols-12 content-end">
    <Welcome/>
    <PostsShowcase featuredPosts={featuredPosts}/>
</div>

<style>
    .solitude-index-main {
        width          : 100vw;
        height         : 75vh;
        padding-bottom : 5px;
    }
</style>
