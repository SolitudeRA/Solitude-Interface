---
import NavbarUtility from '../../components/navbar/NavbarUtility.astro';
import NavbarBrand from "../../components/navbar/NavbarBrand.astro";

import type {ImageMetadata} from "astro";

interface Props {
    logoImage: ImageMetadata
    siteTitle: string,
    siteSubTitle: string
}

const {logoImage, siteTitle, siteSubTitle} = Astro.props;
---

<nav class="solitude-navbar">
    <div class="flex h-full">
        <NavbarBrand logoImage={logoImage} siteTitle={siteTitle} siteSubTitle={siteSubTitle}/>
        <NavbarUtility/>
    </div>
</nav>

<style>
    .solitude-navbar {
        height : 15vh;
    }
</style>
