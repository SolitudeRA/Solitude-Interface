---
import "@styles/post-view.css"
import type {Post} from "@apiClients/ghostPosts";
import {Chip} from "@heroui/react";

interface Props {
    post: Post
}

const {post} = Astro.props;
const postImageLightUrl = `linear-gradient(rgba(255, 255, 255, 0.55), rgba(255, 255, 255, 0.55)),url(${post.feature_image.toString()})`;
const postImageDarkUrl = `linear-gradient(rgba(0, 0, 0, 0.55), rgba(0, 0, 0, 0.55)),url(${post.feature_image.toString()})`;
---

<div class="post-view-card">
    <div class="post-view-card-primary-tags flex items-center justify-between">
        <div>
            <Chip variant="flat" color="primary" client:visible>
                {post.post_type}
            </Chip>
        </div>
        <div>
            <Chip variant="flat" color="secondary" client:visible>
                {post.post_series}
            </Chip>
        </div>
    </div>
    <div class="post-view-card-title flex justify-center items-center">
        <div class="text-center">
            {post.title}
        </div>
    </div>
    <div class="post-view-card-content">
        {post.excerpt}
    </div>
    <div class="post-view-card-secondary-tags">
        {post.post_general_tags?.map((tagName) =>
                                             <Chip>
                                                 {tagName}
                                             </Chip>)}
    </div>
</div>

<style define:vars={{postImageLightUrl, postImageDarkUrl}}>
    .post-view-card {
        background-size  : cover;
        background-image : var(--postImageLightUrl);
    }

    html.dark .post-view-card {
        background-image : var(--postImageDarkUrl);
    }
</style>