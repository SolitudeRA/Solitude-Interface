---

<article class="policy-content">
    <!-- 简介 -->
    <section class="policy-intro">
        <p>{t.intro}</p>
    </section>

    <!-- 主要内容区域 -->
    <div class="policy-sections">
        <!-- Information We Collect -->
        <section class="policy-section">
            <h2 class="policy-heading">{t.infoCollect}</h2>

            <div class="policy-subsections">
                <div class="policy-subsection">
                    <h3 class="policy-subheading">
                        <span class="policy-number">1</span>
                        {t.infoProvide}
                    </h3>
                    <p class="policy-text">{t.infoProvideDesc}</p>
                    <ul class="policy-list">
                        {l.infoProvide.map((item: string) => <li>{item}</li>)}
                    </ul>
                </div>

                <div class="policy-subsection">
                    <h3 class="policy-subheading">
                        <span class="policy-number">2</span>
                        {t.infoAuto}
                    </h3>
                    <p class="policy-text">{t.infoAutoDesc}</p>
                    <ul class="policy-list">
                        {l.infoAuto.map((item: string) => <li>{item}</li>)}
                    </ul>
                </div>
            </div>
        </section>

        <!-- How We Use Your Information -->
        <section class="policy-section">
            <h2 class="policy-heading">{t.howUse}</h2>
