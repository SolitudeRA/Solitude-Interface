<style>
    .policy-content {
        padding-bottom: 100px;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    /* 页面头部 */
    .policy-header {
        margin-bottom: 3rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid var(--border);
    }

    .policy-title {
        font-size: 3rem;
        font-weight: 700;
        color: var(--foreground);
        margin-bottom: 1rem;
        letter-spacing: -0.02em;
    }

    .policy-meta {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 0.75rem;
    }

    .policy-badge {
        display: inline-flex;
        align-items: center;
        padding: 0.375rem 0.875rem;
        font-size: 0.875rem;
        font-weight: 500;
        background: var(--accent);
        color: var(--chart-1);
        border-radius: 9999px;
        border: 1px solid var(--border);
    }

    .policy-date {
        font-size: 1.125rem;
        color: var(--text-content-secondary);
    }

    /* 简介 */
    .policy-intro {
        margin-bottom: 2.5rem;
    }

    .policy-intro p {
        font-size: 1.125rem;
        line-height: 1.8;
        color: var(--text-content-primary);
    }

    /* 章节 */
    .policy-sections {
        display: flex;
        flex-direction: column;
        gap: 2.5rem;
    }

    .policy-section {
        scroll-margin-top: 2rem;
    }

    /* 主要标题样式 */
    .policy-heading {
        font-size: 1.75rem;
        font-weight: 700;
        line-height: 1.3;
        margin-bottom: 1.25rem;
        color: var(--foreground);
        padding-bottom: 0.625rem;
        border-bottom: 2px solid var(--chart-1);
        display: inline-block;
    }

    /* 子章节 */
    .policy-subsections {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .policy-subsection {
        border-left: 3px solid var(--border);
        padding-left: 1.5rem;
    }

    /* 子标题样式 */
    .policy-subheading {
        font-size: 1.25rem;
        font-weight: 600;
        line-height: 1.4;
        margin-bottom: 0.75rem;
        color: var(--foreground);
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    /* 编号样式 */
    .policy-number {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 1.75rem;
        height: 1.75rem;
        font-size: 0.875rem;
        font-weight: 600;
        background: var(--chart-1);
        color: var(--background);
        border-radius: 50%;
        flex-shrink: 0;
    }

    /* 正文样式 */
    .policy-text {
        font-size: 1.0625rem;
        line-height: 1.8;
        color: var(--text-content-primary);
    }

    /* 列表样式 */
    .policy-list {
        list-style: none;
        padding: 0;
        margin-top: 1rem;
        margin-left: 0;
    }

    .policy-list li {
        position: relative;
        padding-left: 1.75rem;
        margin-bottom: 0.625rem;
        font-size: 1.0625rem;
        line-height: 1.7;
        color: var(--text-content-primary);
    }

    .policy-list li::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0.625rem;
        width: 0.5rem;
        height: 0.5rem;
        background: var(--chart-1);
        border-radius: 50%;
    }

    /* 链接样式 */
    .policy-link {
        color: var(--chart-1);
        text-decoration: none;
        border-bottom: 1px solid var(--border);
        transition: all 0.2s ease;
    }

    .policy-link:hover {
        color: var(--ring);
        border-bottom-color: var(--ring);
    }

    /* 卡片 */
    .policy-cards {
        display: grid;
        gap: 1rem;
        grid-template-columns: repeat(1, 1fr);
    }

    @media (min-width: 640px) {
        .policy-cards {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    .policy-card {
        padding: 1.5rem;
        background: var(--card);
        border-radius: 12px;
        border: 1px solid var(--border);
        transition: all 0.2s ease;
    }

    .policy-card:hover {
        transform: translateY(-2px);
        border-color: var(--ring);
        box-shadow: 0 8px 24px var(--post-view-card-shadow);
    }

    .policy-card-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 2.5rem;
        height: 2.5rem;
        background: var(--accent);
        color: var(--chart-1);
        border-radius: 0.5rem;
        margin-bottom: 0.75rem;
    }

    .policy-card-title {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: var(--foreground);
    }

    .policy-card-text {
        font-size: 0.875rem;
        line-height: 1.6;
        color: var(--text-content-secondary);
    }

    /* 联系方式 */
    .policy-contact {
        margin-top: 1.5rem;
