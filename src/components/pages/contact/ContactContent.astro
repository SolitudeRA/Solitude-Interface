<style>
    .contact-content {
        display: flex;
        flex-direction: column;
        gap: 2.5rem;
        padding-top: 1rem;
    }

    .contact-section {
        padding-bottom: 2rem;
        border-bottom: 1px solid var(--border);
    }

    .contact-section:last-child {
        border-bottom: none;
        padding-bottom: 0;
    }

    .contact-section-title {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--foreground);
        margin-bottom: 1.25rem;
    }

    .section-icon {
        width: 1.5rem;
        height: 1.5rem;
        color: var(--chart-1);
    }

    .contact-text {
        color: var(--text-content-primary);
        font-size: 1.125rem;
        line-height: 1.75;
    }

    .contact-link {
        color: var(--chart-1);
        text-decoration: none;
        transition: all 0.2s ease;
        padding: 0.5rem 1rem;
        background: var(--accent);
        border-radius: 0.5rem;
        border: 1px solid var(--border);
        display: inline-block;
    }

    .contact-link:hover {
        background: var(--secondary);
        border-color: var(--ring);
    }

    .social-links {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .social-card {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem 1.25rem;
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 0.75rem;
        text-decoration: none;
        transition: all 0.2s ease;
    }

    .social-card:hover {
        background: var(--accent);
        border-color: var(--ring);
        transform: translateX(4px);
    }

    .social-icon-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 2.5rem;
        height: 2.5rem;
        border-radius: 0.5rem;
        flex-shrink: 0;
    }

    .social-icon-wrapper.github {
        background: var(--muted);
        color: var(--foreground);
    }

    .social-icon-wrapper.twitter {
        background: rgba(29, 161, 242, 0.15);
        color: #1DA1F2;
    }

    .social-icon {
        width: 1.25rem;
        height: 1.25rem;
    }

    .social-info {
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .social-name {
        font-size: 1rem;
        font-weight: 600;
        color: var(--foreground);
    }

    .social-handle {
        font-size: 0.875rem;
        color: var(--text-content-secondary);
    }

    .arrow-icon {
        width: 1.25rem;
        height: 1.25rem;
        color: var(--muted-foreground);
        transition: all 0.2s ease;
    }

    .social-card:hover .arrow-icon {
        color: var(--chart-1);
        transform: translateX(4px);
    }

    @media (max-width: 768px) {
        .contact-section-title {
            font-size: 1.25rem;
        }

        .contact-text {
            font-size: 1rem;
        }

        .social-card {
            padding: 0.875rem 1rem;
        }
    }
</style>
