---
import SmartNavbar from './SmartNavbar.tsx';
import NavbarBrand from './NavbarBrand.astro';
import NavbarUtility from './NavbarUtility.astro';

interface Props {
    logoUrl: string;
    siteTitle: string;
    siteSubTitle: string;
    homeUrl?: string;
    isFixed?: boolean;
}

const {
    logoUrl,
    siteTitle,
    siteSubTitle,
    homeUrl = '/',
    isFixed = false,
} = Astro.props;
---

<SmartNavbar isFixed={isFixed} client:load>
    <NavbarBrand
        logoImageUrl={logoUrl}
        siteTitle={siteTitle}
        siteSubTitle={siteSubTitle}
        homeUrl={homeUrl}
    />
    <NavbarUtility />
</SmartNavbar>
