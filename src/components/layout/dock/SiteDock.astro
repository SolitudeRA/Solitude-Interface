---
import Dock from './Dock.astro';
import DockNav from './DockNav.astro';
import DockSocial from './DockSocial.astro';

interface Props {
    isFixed?: boolean;
    layout?: 'default' | 'home';
}

const { isFixed = false, layout = 'default' } = Astro.props;
---

<Dock isFixed={isFixed}>
    {
        layout === 'home' ? (
            <>
                {/* 桌面端三栏布局 */}
                <div class="hidden md:block" />
                <DockNav />
                <DockSocial />
            </>
        ) : (
            <>
                {/* 桌面端三栏布局 */}
                <DockNav />
                <div class="hidden md:block" />
                <DockSocial />
            </>
        )
    }
</Dock>

{/* 移动端底部安全区域占位 */}
<div class="h-safe-area-inset-bottom md:hidden" />
