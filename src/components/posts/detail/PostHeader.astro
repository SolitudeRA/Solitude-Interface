---
import type { PostTag } from '@api/ghost/types';

interface Props {
    title: string;
    primary_tag?: PostTag | undefined;
    tags?: PostTag[] | undefined;
    published_at: string;
}

const { title, primary_tag, tags, published_at } = Astro.props;
const publishDate = new Date(published_at);
---

<div
    class="article-meta-container flex min-h-50 flex-col items-center justify-center p-4 text-center sm:min-h-60 sm:p-6 md:min-h-75 md:p-8"
>
    <!-- 标题 -->
    <h1
        class="article-title mb-4 text-2xl font-bold antialiased sm:mb-5 sm:text-3xl md:mb-6 md:text-4xl lg:text-5xl"
    >
        {title}
    </h1>

    <!-- 主标签和发布时间 -->
    <div
        class="flex flex-wrap items-center justify-center gap-2 text-xs sm:gap-3 sm:text-sm md:gap-4"
    >
        {
            primary_tag && (
                <span class="primary-tag rounded-full px-3 py-1 font-medium sm:px-4 sm:py-1.5">
                    {primary_tag.name}
                </span>
            )
        }

        <time
            datetime={publishDate.toISOString()}
            class="publish-date flex items-center gap-1.5 sm:gap-2"
        >
            <svg
                class="h-3.5 w-3.5 sm:h-4 sm:w-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                ></path>
            </svg>
            {
                publishDate.toLocaleDateString('zh-CN', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                })
            }
        </time>
    </div>

    <!-- 其他标签 -->
    {
        tags && tags.length > 0 && (
            <div class="mt-3 flex flex-wrap justify-center gap-1.5 sm:mt-4 sm:gap-2 md:mt-5">
                {tags
                    .filter((tag) => !tag.slug.startsWith('hash-'))
                    .slice(0, 5)
                    .map((tag) => (
                        <span class="tag-item rounded-md px-2 py-0.5 text-xs sm:px-3 sm:py-1 sm:text-sm">
                            #{tag.name}
                        </span>
                    ))}
            </div>
        )
    }
</div>

<style>
    .article-meta-container {
        height: 100%;
        padding-top: 1.5rem;
        padding-bottom: 1.5rem;
    }

    @media (min-width: 640px) {
        .article-meta-container {
            padding-top: 1.75rem;
            padding-bottom: 1.75rem;
        }
    }

    @media (min-width: 768px) {
        .article-meta-container {
            padding-top: 2rem;
            padding-bottom: 2rem;
        }
    }

    /* 标题样式 - 使用 CSS 变量 */
    .article-title {
        color: var(--article-header-title);
        text-shadow: 0 1px 3px rgba(255, 255, 255, 0.2);
        letter-spacing: -0.02em;
        line-height: 1.2;
        max-width: 100%;
        padding-left: 0.5rem;
        padding-right: 0.5rem;
    }

    @media (min-width: 640px) {
        .article-title {
            max-width: 700px;
            padding-left: 1rem;
            padding-right: 1rem;
        }
    }

    @media (min-width: 768px) {
        .article-title {
            max-width: 800px;
        }
    }

    @media (min-width: 1024px) {
        .article-title {
            max-width: 900px;
        }
    }

    :global(.dark) .article-title {
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.4);
    }

    /* 主标签样式 - 使用 CSS 变量 */
    .primary-tag {
        background: var(--article-header-tag-bg);
        color: var(--article-header-tag-text);
        border: 1px solid var(--article-header-tag-border);
        backdrop-filter: blur(4px);
        -webkit-backdrop-filter: blur(4px);
        transition: all 0.2s ease;
    }

    .primary-tag:hover {
        filter: brightness(1.1);
    }

    /* 发布日期样式 - 使用 CSS 变量 */
    .publish-date {
        color: var(--article-header-date);
    }

    .publish-date svg {
        color: var(--article-header-date);
        opacity: 0.7;
    }

    /* 标签样式 - 使用 CSS 变量 */
    .tag-item {
        background: var(--article-header-secondary-tag-bg);
        color: var(--article-header-secondary-tag-text);
        border: 1px solid var(--article-header-secondary-tag-border);
        backdrop-filter: blur(4px);
        -webkit-backdrop-filter: blur(4px);
        transition: all 0.2s ease;
    }

    .tag-item:hover {
        filter: brightness(1.1);
    }
</style>
