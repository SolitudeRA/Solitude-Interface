---
import type { Post } from '@api/ghost/types';
import { Chip } from '@components/common/badge';

interface Props {
    post: Post;
}

const { post } = Astro.props;
// 使用主题色调的渐变覆盖层，从上到下渐变增强视觉层次
const postFeatureImageUrl = `url(${post.feature_image.toString()})`;
---

<div class="post-view-card h-full w-full rounded-[35px] px-7 py-8 shadow-lg transition-all duration-300 hover:shadow-2xl flex flex-col">
    <!-- 顶部标签区 -->
    <div class="flex items-center justify-between mb-5">
        <Chip variant="flat" colorScheme="primary" client:visible>
            {post.post_type}
        </Chip>
        {post.post_series && (
            <Chip variant="flat" colorScheme="secondary" client:visible>
                {post.post_series}
            </Chip>
        )}
    </div>

    <!-- 标题区 -->
    <div class="mb-5 mt-1">
        <h3 class="card-title text-[1.625rem] font-semibold leading-snug tracking-tight line-clamp-3 text-center">
            {post.title}
        </h3>
    </div>

    <!-- 摘要区（flex-1 占据剩余空间） -->
    <div class="flex-1 overflow-hidden mb-5">
        <p class="card-excerpt text-[0.9375rem] leading-[1.75] tracking-normal line-clamp-[7]">
            {post.excerpt}
        </p>
    </div>

    <!-- 底部信息区 -->
    <div class="mt-auto space-y-3">
        <div class="card-meta text-center text-xs tracking-wide font-medium">
            {post.published_at.split('T')[0]}
        </div>
        {post.post_general_tags && post.post_general_tags.length > 0 && (
            <div class="flex flex-wrap gap-1.5 justify-center">
                {post.post_general_tags.slice(0, 3).map((tagName: string) => (
                    <Chip colorScheme="success" variant="flat" client:visible>
                        {tagName}
                    </Chip>
                ))}
            </div>
        )}
    </div>
</div>

<style
    define:vars={{
        postFeatureImageUrl: postFeatureImageUrl,
    }}
>
    .post-view-card {
        position: relative;
        background-size: cover;
        background-position: center;
        background-image: var(--postFeatureImageUrl);
        box-shadow: 0 8px 32px var(--post-view-card-shadow);
    }

    /* 彩虹色亮边 - 使用伪元素实现 */
    .post-view-card::after {
        content: '';
        position: absolute;
        inset: -1px;
        border-radius: inherit;
        padding: 1px;
        background: conic-gradient(
            from 0deg,
            #ff6b6b,
            #feca57,
            #48dbfb,
            #ff9ff3,
            #54a0ff,
            #5f27cd,
            #ff6b6b
        );
        -webkit-mask: 
            linear-gradient(#fff 0 0) content-box, 
            linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
        pointer-events: none;
        opacity: 0.6;
        transition: opacity 0.3s ease;
        z-index: 0;
    }

    .post-view-card:hover::after {
        opacity: 0.9;
    }

    /* 渐变覆盖层 */
    .post-view-card::before {
        content: '';
        position: absolute;
        inset: 0;
        border-radius: inherit;
        background: linear-gradient(
            180deg,
            var(--post-view-card-overlay-start) 0%,
            var(--post-view-card-overlay-mid) 50%,
            var(--post-view-card-overlay-end) 100%
        );
        pointer-events: none;
        transition: opacity 0.3s ease;
    }

    /* 确保内容在覆盖层之上 */
    .post-view-card > * {
        position: relative;
        z-index: 1;
    }

    /* 文字颜色 - 使用主题变量提高可读性 */
    .card-title {
        color: var(--post-view-card-title);
        text-shadow: 0 1px 2px rgba(255, 255, 255, 0.3);
        letter-spacing: -0.02em;
    }

    .card-excerpt {
        color: var(--post-view-card-excerpt);
        text-shadow: 0 1px 1px rgba(255, 255, 255, 0.2);
        word-spacing: 0.05em;
    }

    .card-meta {
        color: var(--post-view-card-meta);
        letter-spacing: 0.05em;
    }

    /* 暗色主题文字阴影调整 */
    :global(.dark) .card-title {
        text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
    }

    :global(.dark) .card-excerpt {
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.4);
    }

    /* 悬停效果增强 */
    .post-view-card:hover {
        box-shadow: 0 12px 48px var(--post-view-card-shadow-hover);
    }

    .post-view-card:hover::before {
        opacity: 0.85;
    }

    /* 响应式优化 - 大屏幕增加 padding */
    @media (min-width: 1440px) {
        .post-view-card {
            padding: 2.25rem 2rem;
        }
    }

    @media (min-width: 1920px) {
        .post-view-card {
            padding: 2.5rem 2.25rem;
        }
    }
</style>
