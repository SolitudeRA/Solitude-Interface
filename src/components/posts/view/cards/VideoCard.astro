        postFeatureImageUrl: postFeatureImageUrl,
    }}
>
    .post-view-card-video {
        position: relative;
        background-size: cover;
        background-position: center;
        background-image: var(--postFeatureImageUrl);
        box-shadow: 0 8px 32px var(--post-view-card-shadow);
    }

    /* å½©è™¹è‰²äº®è¾¹ - ä½¿ç”¨ä¼ªå…ƒç´ å®ç° */
    .post-view-card-video::after {
        content: '';
        position: absolute;
        inset: -1px;
        border-radius: inherit;
        padding: 1px;
        background: conic-gradient(
            from 0deg,
            #ff6b6b,
            #feca57,
            #48dbfb,
            #ff9ff3,
            #54a0ff,
            #5f27cd,
            #ff6b6b
        );
        -webkit-mask:
            linear-gradient(#fff 0 0) content-box,
            linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
        pointer-events: none;
        opacity: 0.6;
        transition: opacity 0.3s ease;
        z-index: 0;
    }

    .post-view-card-video:hover::after {
        opacity: 0.9;
    }

    /* æ¸å˜è¦†ç›–å±‚ */
    .post-view-card-video::before {
        content: '';
        position: absolute;
        inset: 0;
        border-radius: inherit;
        background: linear-gradient(
            180deg,
            var(--post-view-card-overlay-start) 0%,
            var(--post-view-card-overlay-mid) 50%,
            var(--post-view-card-overlay-end) 100%
        );
        pointer-events: none;
        transition: opacity 0.3s ease;
    }

    /* ç¡®ä¿å†…å®¹åœ¨è¦†ç›–å±‚ä¹‹ä¸Š */
    .post-view-card-video > * {
        position: relative;
        z-index: 1;
    }

    /* æ’­æ”¾æŒ‰é’®æ ·å¼ - ä½¿ç”¨ä¸»é¢˜è‰² */
    .play-button {
        background: var(--post-view-card-border);
        backdrop-filter: blur(8px);
        border: 1px solid var(--post-view-card-border);
    }

    .play-button:hover {
        background: var(--post-view-card-shadow-hover);
    }

    /* æ–‡å­—é¢œè‰² - ä½¿ç”¨ä¸»é¢˜å˜é‡æé«˜å¯è¯»æ€§ */
    .card-title {
        color: var(--post-view-card-title);
        text-shadow: 0 1px 2px rgba(255, 255, 255, 0.3);
    }

    .card-excerpt {
        color: var(--post-view-card-excerpt);
        text-shadow: 0 1px 1px rgba(255, 255, 255, 0.2);
    }

    .card-meta {
        color: var(--post-view-card-meta);
    }

    /* æš—è‰²ä¸»é¢˜æ–‡å­—é˜´å½±è°ƒæ•´ */
