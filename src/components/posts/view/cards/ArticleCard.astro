    /* å½©è™¹è‰²äº®è¾¹ - ä½¿ç”¨ä¼ªå…ƒç´ å®ç° */
    .post-view-card-article::after {
        content: '';
        position: absolute;
        inset: -1px;
        border-radius: inherit;
        padding: 1px;
        background: conic-gradient(
            from 0deg,
            #ff6b6b,
            #feca57,
            #48dbfb,
            #ff9ff3,
            #54a0ff,
            #5f27cd,
            #ff6b6b
