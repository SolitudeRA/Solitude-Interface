        -webkit-mask:
            linear-gradient(#fff 0 0) content-box,
            linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
        pointer-events: none;
        opacity: 0.6;
        transition: opacity 0.3s ease;
        z-index: 0;
    }

    .post-view-card-article:hover::after {
        opacity: 0.9;
    }

    /* æ¸å˜è¦†ç›–å±‚ - æ–‡ç« å¡ç‰‡ä½¿ç”¨ç¨å¼ºçš„è¦†ç›–æ•ˆæœ */
    .post-view-card-article::before {
