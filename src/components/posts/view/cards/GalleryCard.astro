<style
    define:vars={{
        postFeatureImageUrl: postFeatureImageUrl,
    }}
>
    .post-view-card-gallery {
        position: relative;
        background-size: cover;
        background-position: center;
        background-image: var(--postFeatureImageUrl);
        box-shadow: 0 8px 32px var(--post-view-card-shadow);
    }

    /* å½©è™¹è‰²äº®è¾¹ - ä½¿ç”¨ä¼ªå…ƒç´ å®ç° */
    .post-view-card-gallery::after {
        content: '';
        position: absolute;
        inset: -1px;
        border-radius: inherit;
        padding: 1px;
        background: conic-gradient(
            from 0deg,
            #ff6b6b,
            #feca57,
            #48dbfb,
            #ff9ff3,
            #54a0ff,
            #5f27cd,
            #ff6b6b
        );
        -webkit-mask: 
            linear-gradient(#fff 0 0) content-box, 
            linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
        pointer-events: none;
        opacity: 0.6;
        transition: opacity 0.3s ease;
        z-index: 0;
    }

    .post-view-card-gallery:hover::after {
        opacity: 0.9;
    }

    /* æ¸å˜è¦†ç›–å±‚ - ç”»å»Šå¡ç‰‡ä½¿ç”¨è¾ƒè½»çš„è¦†ç›–ä»¥çªå‡ºå›¾ç‰‡ */
    .post-view-card-gallery::before {
        content: '';
        position: absolute;
        inset: 0;
        border-radius: inherit;
        background: linear-gradient(
            180deg,
            var(--post-view-card-overlay-start) 0%,
            var(--post-view-card-overlay-mid) 60%,
            var(--post-view-card-overlay-end) 100%
        );
        opacity: 0.9;
        pointer-events: none;
        transition: opacity 0.3s ease;
    }

    /* ç¡®ä¿å†…å®¹åœ¨è¦†ç›–å±‚ä¹‹ä¸Š */
    .post-view-card-gallery > * {
        position: relative;
        z-index: 1;
    }

    /* ç”»å»Šæ ¼å­ä½¿ç”¨ä¸»é¢˜è‰² */
    .gallery-cell {
        background: var(--post-view-card-border);
        backdrop-filter: blur(4px);
    }

    /* æ‚¬åœæ•ˆæœå¢å¼º */
    .post-view-card-gallery:hover {
        box-shadow: 0 12px 48px var(--post-view-card-shadow-hover);
    }

    .post-view-card-gallery:hover::before {
        opacity: 0.8;
    }

    /* æ–‡å­—é¢œè‰² - ä½¿ç”¨ä¸»é¢˜å˜é‡æé«˜å¯è¯»æ€§ */
    .card-title {
        color: var(--post-view-card-title);
        text-shadow: 0 1px 2px rgba(255, 255, 255, 0.3);
    }

    .card-excerpt {
        color: var(--post-view-card-excerpt);
        text-shadow: 0 1px 1px rgba(255, 255, 255, 0.2);
    }

    .card-meta {
        color: var(--post-view-card-meta);
    }

    /* æš—è‰²ä¸»é¢˜æ–‡å­—é˜´å½±è°ƒæ•´ */
    :global(.dark) .card-title {
        text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
    }

    :global(.dark) .card-excerpt {
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.4);
    }

    .gallery-grid {
        animation: fadeInScale 0.5s ease-out;
    }

    @keyframes fadeInScale {
        from {
            opacity: 0;
            transform: scale(0.9);
        }
        to {
            opacity: 0.8;
            transform: scale(1);
        }
    }
</style>
