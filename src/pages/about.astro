---
import { initializeSiteData } from '@api/ghost/settings';
import BaseLayout from '@layouts/base/BaseLayout.astro';
import SiteNavbar from '@components/layout/navbar/SiteNavbar.astro';
import SiteDock from '@components/layout/dock/SiteDock.astro';

const { siteTitle, siteDescription, logoUrl, coverImageUrl } =
    await initializeSiteData();
---

<BaseLayout siteTitle={siteTitle} coverImageUrl={coverImageUrl}>
    <SiteNavbar
        logoUrl={logoUrl}
        siteTitle={siteTitle}
        siteSubTitle={siteDescription}
        isFixed={true}
    />
    
    <!-- 背景图片区域 -->
    <div class="about-hero" style={`--bg-image: url(${coverImageUrl})`}>
        <div class="about-hero-overlay"></div>
        <div class="about-hero-content">
            <h1 class="about-hero-title">About Me</h1>
            <div class="about-hero-meta">
                <span class="about-badge">
                    <svg xmlns="http://www.w3.org/2000/svg" class="about-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                    SolitudeRA
                </span>
            </div>
        </div>
    </div>
    
    <main class="about-page min-h-screen">
        <div class="about-content-wrapper mx-auto max-w-4xl px-6 sm:px-8 lg:px-12">
            <div class="about-content">
                <section class="about-section">
                    <h2 class="about-section-title">Welcome</h2>
                    <p class="about-text">
                        这是关于页面的内容。在这里你可以了解更多关于我和这个网站的信息。
                    </p>
                </section>

                <section class="about-section">
                    <h2 class="about-section-title">The Site</h2>
                    <p class="about-text">
                        这个网站是使用 Astro 框架构建的，采用了现代化的设计风格，提供流畅的用户体验。
                    </p>
                </section>

                <section class="about-section">
                    <h2 class="about-section-title">Interests</h2>
                    <div class="about-tags">
                        <span class="about-tag">Web Development</span>
                        <span class="about-tag">Design</span>
                        <span class="about-tag">Technology</span>
                        <span class="about-tag">Open Source</span>
                    </div>
                </section>
            </div>
        </div>
    </main>
    <SiteDock isFixed={true} layout="home" />
</BaseLayout>

<style>
    .about-hero {
        position: relative;
        height: 50vh;
        min-height: 350px;
        width: 100%;
        background-image: var(--bg-image);
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 14vh;
        margin-bottom: -1px;
    }

    .about-hero-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            180deg,
            rgba(38, 38, 38, 0.4) 0%,
            rgba(38, 38, 38, 0.7) 50%,
            #262626 95%,
            #262626 100%
        );
        backdrop-filter: blur(2px);
        -webkit-backdrop-filter: blur(2px);
    }

    .about-hero-content {
        position: relative;
        z-index: 1;
        text-align: center;
        padding: 0 2rem;
    }

    .about-hero-title {
        font-size: 4rem;
        font-weight: 700;
        color: #F5F5F5;
        margin-bottom: 1.5rem;
        letter-spacing: -0.02em;
        text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }

    .about-hero-meta {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
    }

    .about-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.375rem 0.875rem;
        font-size: 0.875rem;
        font-weight: 500;
        background: rgba(96, 165, 250, 0.15);
        color: #60A5FA;
        border-radius: 9999px;
        border: 1px solid rgba(96, 165, 250, 0.3);
    }

    .about-icon {
        width: 1rem;
        height: 1rem;
    }

    .about-page {
        background-color: #262626;
        position: relative;
    }

    .about-content-wrapper {
        padding-top: 3rem;
        padding-bottom: 3rem;
    }

    .about-content {
        display: flex;
        flex-direction: column;
        gap: 2.5rem;
    }

    .about-section {
        padding-bottom: 2rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .about-section:last-child {
        border-bottom: none;
        padding-bottom: 0;
    }

    .about-section-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #F5F5F5;
        margin-bottom: 1rem;
        position: relative;
        padding-left: 1rem;
    }

    .about-section-title::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0.25rem;
        bottom: 0.25rem;
        width: 3px;
        background: linear-gradient(180deg, #60A5FA 0%, #3B82F6 100%);
        border-radius: 2px;
    }

    .about-text {
        color: #D4D4D4;
        font-size: 1.125rem;
        line-height: 1.75;
    }

    .about-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
    }

    .about-tag {
        display: inline-flex;
        align-items: center;
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
        font-weight: 500;
        background: rgba(96, 165, 250, 0.1);
        color: #60A5FA;
        border-radius: 0.5rem;
        border: 1px solid rgba(96, 165, 250, 0.2);
        transition: all 0.2s ease;
    }

    .about-tag:hover {
        background: rgba(96, 165, 250, 0.2);
        border-color: rgba(96, 165, 250, 0.4);
    }

    @media (max-width: 768px) {
        .about-hero {
            height: 40vh;
            min-height: 280px;
        }

        .about-hero-title {
            font-size: 2.5rem;
        }

        .about-section-title {
            font-size: 1.25rem;
        }

        .about-text {
            font-size: 1rem;
        }
    }
</style>
